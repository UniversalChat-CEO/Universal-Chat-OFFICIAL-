  </main>  <script>
    // === Starfield background (lightweight) ===
    (function(){
      const c = document.getElementById('stars');
      const dpr = Math.min(window.devicePixelRatio || 1, 2);
      const ctx = c.getContext('2d');
      let W, H, stars;
      function resize(){
        W = c.width = Math.floor(innerWidth * dpr);
        H = c.height = Math.floor(innerHeight * dpr);
        c.style.width = innerWidth + 'px';
        c.style.height = innerHeight + 'px';
        // generate stars
        const count = Math.floor((W*H)/4500);
        stars = new Array(count).fill().map(() => ({
          x: Math.random()*W,
          y: Math.random()*H,
          r: Math.random()*1.6 + 0.2,
          a: Math.random()*1,
          s: Math.random()*0.3 + 0.05
        }));
      }
      function step(){
        ctx.clearRect(0,0,W,H);
        ctx.save();
        ctx.fillStyle = '#ffffff';
        stars.forEach(st => {
          st.a += st.s; const twinkle = (Math.sin(st.a)+1)/2; // 0..1
          ctx.globalAlpha = 0.35 + twinkle*0.65;
          ctx.beginPath(); ctx.arc(st.x, st.y, st.r, 0, Math.PI*2); ctx.fill();
        });
        ctx.restore();
        requestAnimationFrame(step);
      }
      addEventListener('resize', resize, {passive:true});
      resize(); step();
    })();

    // === Local visit counter (per dispositivo) ===
    (function(){
      const KEY = 'uc_visits_v1';
      let n = parseInt(localStorage.getItem(KEY) || '0', 10) || 0;
      n += 1; // count this visit
      localStorage.setItem(KEY, String(n));
      const el = document.getElementById('visit-count');
      if(el) el.textContent = n.toLocaleString('it-IT');
      document.getElementById('year').textContent = new Date().getFullYear();
    })();

    /*
     * Vuoi un counter GLOBALE (tutti i visitatori)?
     * Opzioni rapide:
     * 1) Usa un servizio come CountAPI (gratuito). Esempio MINIMO:
     *    fetch('https://api.countapi.xyz/hit/universal-chat.example/visite')
     *      .then(r=>r.json()).then(d=>{ document.getElementById('visit-count').textContent = (d.value||0).toLocaleString('it-IT'); });
